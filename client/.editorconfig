# EditorConfig is awesome: https://EditorConfig.org

# Default settings for all files
[*]
charset = utf-8
insert_final_newline = true
end_of_line = lf
indent_style = space
indent_size = 4
max_line_length = 108
trim_trailing_whitespace = true

# Specific settings for some files
[{*.c,*.h,*.hpp,*.cpp,*.rb,*.lisp,*.exs,*.wat,*.html}]
indent_size = 2

[{*.yml,*.yaml,*.toml,*.json}]
indent_size = 2

# Specific settings for Markdown files
[{*.md,*.mdx,*.mdoc}]
indent_size = 2
max_line_length = 108
trim_trailing_whitespace = false

# Makefiles always use tabs for indentation
[Makefile]
indent_style = tab
indent_size = unset # Allow user-defined tab width
